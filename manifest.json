{
    "name": "YouTube Ads Helper",
    "description": "Skip YouTube Ads and hide baner automatically.",
    "version": "1.0",
    "author": "@n0nn1ck",
    "homepage_url": "https://github.com/rissen/youtube-ad-helper",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "run_at": "document_end",
            "all_frames": true,
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "64": "logo-64.png",
        "128": "logo-128.png"
    }
}